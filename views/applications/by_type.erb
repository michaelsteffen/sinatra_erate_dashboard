<h1><%= @type %> Applications</h1>
<br>

<%= erb :index_nav_partial, :locals => {
	:page => @page, 
	:num_pages => (@app_presenter.application_count/@page_size + 1).to_i, 
	:base_url => "/applications/by_type/#{@type}/#{@sort}/#{@page_size}/",
	:sort => "Requested Support", 
	:sort_options => [ {:label => "Application Number", :link => "#"},
					   {:label => "BEN", :link => "#"},
					   {:label => "Applicant Name", :link => "#"},
					   {:label => "Requested Support", :link => "#"} ], 
	:page_len => "1000", 
	:page_len_options => [ {:label => "100", :link => "#"},
						   {:label => "500", :link => "#"},
						   {:label => "1000", :link => "#"},
						   {:label => "5000", :link => "#"},
						   {:label => "Show All", :link => "#"} ] } %>

<table class="table table-hover table-condensed">
  <thead><tr>
    <th>App No</th>
    <th>BEN</th>
    <th>Applicant Name</th>
    <th>State</th>
    <th>Requested Support</th>
  </tr></thead>
<% @app_presenter.applications.each do |app| %>
  <tr>
    <td><%= '<a href="' + app.USAC_f471_URL + '">' %>
      <%= app.f471_application_number %></a></td>
    <td><%= app.ben %></td>
    <td><%= app.applicant_name %></td>
    <td><%= app.applicant_state %></td>
    <td>$ <%= number_with_delimiter(app.total_req.to_i) %></td>
  </tr>
<% end %>
</table>

